# Infrastructure Environment Variables
# Copy to .env and replace placeholders. Do NOT commit .env.

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gymapp
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/gymapp

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET=replace_with_secure_random_value

# =============================================================================
# Object Storage (MinIO / S3)
# =============================================================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioaccess
S3_SECRET_KEY=miniosecret
S3_BUCKET=gym-assets

# =============================================================================
# Supabase (Optional)
# =============================================================================
SUPABASE_URL=http://localhost:54321
SUPABASE_KEY=replace_with_placeholder

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3845
MCP_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Monitoring
# =============================================================================
SENTRY_DSN=
